<UserControl x:Class="SmartTextBox.Controls.IntellisenseTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartTextBox.Controls"
             xmlns:intellisensePopupControl="clr-namespace:SmartTextBox.IntellisensePopupControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <RichTextBox x:Name="RichTextBox" AcceptsReturn="False">
            <RichTextBox.Document>
                <FlowDocument >
                    <Paragraph/>
                </FlowDocument>
            </RichTextBox.Document>
        </RichTextBox>
        <intellisensePopupControl:IntellisensePopup x:Name="IntellisensePopup"/>
    </Grid>
</UserControl>
